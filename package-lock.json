import { useState } from 'react'; import { Button } from '@/components/ui/button'; import { Card } from '@/components/ui/card'; import Confetti from 'react-confetti'; import { motion } from 'framer-motion'; import useSound from 'use-sound';

export default function SurprisePage() { const [surprise, setSurprise] = useState(null); const [showConfetti, setShowConfetti] = useState(false);

const [play1] = useSound('/sounds/surprise1.mp3'); const [play2] = useSound('/sounds/surprise2.mp3'); const [play3] = useSound('/sounds/surprise3.mp3');

const handleSurprise = (num) => { setSurprise(num); setShowConfetti(true); if (num === 1) play1(); if (num === 2) play2(); if (num === 3) play3();

setTimeout(() => setShowConfetti(false), 3000);

};

return ( <div className="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-pink-200 to-purple-300 p-4 relative overflow-hidden"> {showConfetti && <Confetti width={window.innerWidth} height={window.innerHeight} />} <motion.h1 initial={{ opacity: 0, y: -50 }} animate={{ opacity: 1, y: 0 }} className="text-4xl font-bold text-pink-600 mb-8 text-center font-pacifico" > Chhota Don ke Surprises 💖🎉 </motion.h1>

<div className="grid grid-cols-1 sm:grid-cols-3 gap-6 w-full max-w-4xl">
    <Card className="flex flex-col items-center justify-center p-6 hover:scale-105 transition cursor-pointer" onClick={() => handleSurprise(1)}>
      <p className="text-xl text-pink-500">🎁 Surprise 1</p>
    </Card>

    <Card className="flex flex-col items-center justify-center p-6 hover:scale-105 transition cursor-pointer" onClick={() => handleSurprise(2)}>
      <p className="text-xl text-purple-500">💌 Surprise 2</p>
    </Card>

    <Card className="flex flex-col items-center justify-center p-6 hover:scale-105 transition cursor-pointer" onClick={() => handleSurprise(3)}>
      <p className="text-xl text-red-500">🎉 Surprise 3</p>
    </Card>
  </div>

  {surprise && (
    <motion.div 
      initial={{ opacity: 0, scale: 0.5 }} 
      animate={{ opacity: 1, scale: 1 }} 
      className="mt-10 p-6 bg-white rounded-xl shadow-xl text-center max-w-lg"
    >
      {surprise === 1 && <p className="text-lg text-pink-600">"Tumhara pehla surprise: You are AMAZING! 🌟❤️"</p>}
      {surprise === 2 && <p className="text-lg text-purple-600">"Aur yeh dusra: Always keep smiling, cutie! 😄💫"</p>}
      {surprise === 3 && (
        <div>
          <p className="text-lg text-red-500 mb-4">"Aur last mein: You are my rockstar, Priyanshi! 🚀🎶"</p>
          <Button onClick={() => window.location.href='/final-surprise'} className="bg-pink-500 text-white mt-4">More Big Surprise 🔥</Button>
        </div>
      )}
    </motion.div>
  )}
</div>

); }

